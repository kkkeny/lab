<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title><%- contentFor('title') %></title>
    <%- stylesheetLinkTag('css/common', 'css/setup') %>
    <%- javascriptIncludeTag('app') %>
    <%- csrfMetaTag() %>
</head>
<body>
<%- include ../layouts/_header %>

<%- contentFor('title', 'tags') %>

<%- include _aside %>

<section class="content">
    <div class="target">
        <span class="category"><i>常用指标</i></span>
        <ul>
            <% indicators.forEach(function (i) { %>
            <li><%= i %><a href="javascript:;" data-url="/deltag/i/<%= i %>/"><i></i></a></li>
            <% }) %>
        </ul>
        <div class ="clearfix"></div>
    </div>
    <div class="target targetDown">
        <span class="category"><i>常用平台</i></span>
        <ul>
            <% platforms.forEach(function (p) { %>
            <li><%= p %><a href="javascript:;" data-url="/deltag/p/<%= p %>/"><i></i></a></li>
            <% }) %>
        </ul>
        <div class ="clearfix"></div>
    </div>
    <div class="target sendEmail">
        <span class="category"><i>抄送邮件</i></span>
        <form action="" class="emailForm">
            <%- csrfTag() %>
            <textarea name="email" id="emailAddress" placeholder="抄送邮箱地址,多个地址用逗号分隔。失去焦点,数据自动保存！" autofocus><%= addrs%></textarea>
        </form>
        <div class ="clearfix"></div>
        <div class="errorMsg"></div>
    </div>
</section>

</body>
</html>


