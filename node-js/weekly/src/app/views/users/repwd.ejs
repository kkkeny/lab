<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title><%- contentFor('title') %></title>
    <%- stylesheetLinkTag('css/common', 'css/modify-password') %>
    <%- javascriptIncludeTag('app', 'validate') %>
    <%- csrfMetaTag() %>
</head>
<body>
<%- include ../layouts/_header %>
<%- contentFor('title', '修改密码') %>

<%- include _aside %>

<section class="content">
    <fieldset class="modify-password">
        <%- errorMessagesFor(user, {message:'校验错误'}) %>
        <form action="/uppwd/<%= user.id%>" method="post">
        <%- csrfTag() %>
        <label for="">当前密码</label>
        <input type="password" class="now-password" name="now-password"/>
        <label for="">新密码</label>
        <input type="password" class="new-password" name="new-password"/>
        <label for="">确认密码</label>
        <input type="password" name="confirm_password" class="confirm-password"/>
        <div id="errorInfo" class="errorInfo">
            <% var flash = request.flash('info'); if (flash) { %>
            <%- flash %>
            <% } %>
            <% flash = request.flash('error'); if (flash) { %>
            <%- flash %>
            <% }; %>
        </div>
            <button type="submit">保存</button>
        </form>
    </fieldset>
</section>

</body>
</html>


